# ============================================
# Elite Sports DJ Services - Environment Configuration
# ============================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# ============================================
# APPLICATION
# ============================================
# Base URL of the application (used for emails, redirects, etc.)
APP_URL=http://localhost:3000

# Node environment (development, production, test)
NODE_ENV=development

# Skip environment validation (useful for development)
SKIP_ENV_VALIDATION=false

# ============================================
# DATABASE (PostgreSQL)
# ============================================
# PostgreSQL connection string
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/elitesportsdj

# ============================================
# REDIS CACHE
# ============================================
# Redis connection URL (optional, but recommended for production)
# Format: redis://host:port or redis://username:password@host:port
REDIS_URL=redis://localhost:6379

# ============================================
# SESSION & AUTHENTICATION
# ============================================
# Secret key for JWT tokens and session encryption
# IMPORTANT: Generate a strong random string for production!
# You can use: openssl rand -base64 32
SESSION_SECRET=change-this-to-a-random-secret-in-production

# ============================================
# STRIPE PAYMENT
# ============================================
# Stripe publishable key (public, safe to expose to frontend)
STRIPE_PUBLISHABLE_KEY=pk_test_51234567890abcdefghijklmnop

# Stripe secret key (PRIVATE, never expose to frontend!)
STRIPE_SECRET_KEY=sk_test_51234567890abcdefghijklmnop

# Stripe webhook secret (for verifying webhook signatures)
STRIPE_WEBHOOK_SECRET=whsec_1234567890abcdefghijklmnop

# ============================================
# EMAIL CONFIGURATION (SMTP)
# ============================================
# SMTP server configuration for sending emails
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM="Elite Sports DJ <noreply@elitesportsdj.com>"

# Alternative: SendGrid API Key (if using SendGrid instead of SMTP)
# SENDGRID_API_KEY=SG.1234567890abcdefghijklmnop

# ============================================
# FILE STORAGE (AWS S3 or S3-Compatible)
# ============================================
# S3 bucket name for file uploads
S3_BUCKET_NAME=elitesportsdj-uploads

# S3 region
S3_REGION=us-east-1

# S3 access credentials
S3_ACCESS_KEY_ID=AKIAIOSFODNN7EXAMPLE
S3_SECRET_ACCESS_KEY=wJalrXUtnFEMI/K7MDENG/bPxRfiCYEXAMPLEKEY

# S3 endpoint (optional, for S3-compatible services like DigitalOcean Spaces, Cloudflare R2)
# Leave empty for AWS S3
S3_ENDPOINT=

# ============================================
# SECURITY
# ============================================
# Admin IP whitelist (comma-separated list of IPs allowed to access admin panel)
# Leave empty to allow all IPs (not recommended for production)
ADMIN_IP_WHITELIST=

# Cookie domain (for production, set to your domain)
# COOKIE_DOMAIN=.elitesportsdj.com

# ============================================
# MONITORING & LOGGING (Optional)
# ============================================
# Sentry DSN for error tracking (optional)
# SENTRY_DSN=https://examplePublicKey@o0.ingest.sentry.io/0

# Log level (debug, info, warn, error)
LOG_LEVEL=info
